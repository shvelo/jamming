{
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "types": ["node", "jest"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/"
  },
  "include": ["src/**/*"]
}
